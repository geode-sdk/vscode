{
	"publisher": "GeodeSDK",
	"name": "geode",
	"displayName": "Geode",
	"version": "1.13.1",
	"private": true,
	"packageManager": "pnpm@9.3.0",
	"description": "Utilities for the Geode Geometry Dash modding framework",
	"author": {
		"name": "Geode Team",
		"url": "https://github.com/geode-sdk"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/geode-sdk/vscode"
	},
	"bugs": {
		"url": "https://github.com/geode-sdk/vscode/issues"
	},
	"categories": [
		"Other"
	],
	"sideEffects": false,
	"main": "./dist/index.js",
	"icon": "res/geode-circle-no-gradient.png",
	"files": ["dist"],
	"engines": {
		"vscode": "^1.72.0"
	},
	"activationEvents": [
		"onLanguage:cpp",
		"workspaceContains:**/mod.json"
	],
	"galleryBanner": {
		"theme": "dark",
		"color": "#24222B"
	},
	"contributes": {
		"commands": [
			{
				"title": "Geode: Launch Geometry Dash",
				"command": "geode.launchGD"
			},
			{
				"title": "Geode: Open Sprite Browser",
				"command": "geode.openSpriteBrowser"
			},
			{
				"title": "Geode: Publish Mod",
				"command": "geode.publishMod"
			}
		],
		"keybindings": [
			{
				"command": "geode.openSpriteBrowser",
				"key": "Ctrl+Alt+B"
			}
		],
		"languages": [
			{
				"id": "bro",
				"aliases": [
					"Bro"
				],
				"extensions": [
					".bro"
				],
				"configuration": "./src/broma/language-configuration.json"
			}
		],
		"grammars": [
			{
				"injectTo": [
					"source.cpp",
					"source.hpp",
					"source.c",
					"source.h"
				],
				"scopeName": "source.geode-flalert-literal",
				"path": "./res/flalert-colors.json"
			},
			{
				"language": "bro",
				"scopeName": "source.bro",
				"path": "./src/broma/bro.tmLanguage.json"
			},
			{
				"injectTo": [
					"source.bro"
				],
				"scopeName": "source.bro-extra",
				"path": "./src/broma/bro.inject.json"
			}
		],
		"configurationDefaults": {
			"editor.tokenColorCustomizations": {
				"textMateRules": [
					{
						"scope": "geode.flalert.blue",
						"settings": {
							"foreground": "#4a52e1"
						}
					},
					{
						"scope": "geode.flalert.green",
						"settings": {
							"foreground": "#40e348"
						}
					},
					{
						"scope": "geode.flalert.aqua",
						"settings": {
							"foreground": "#60abef"
						}
					},
					{
						"scope": "geode.flalert.cyan",
						"settings": {
							"foreground": "#32c8ff"
						}
					},
					{
						"scope": "geode.flalert.yellow",
						"settings": {
							"foreground": "#ffff00"
						}
					},
					{
						"scope": "geode.flalert.orange",
						"settings": {
							"foreground": "#ffa54b"
						}
					},
					{
						"scope": "geode.flalert.red",
						"settings": {
							"foreground": "#ff5a5a"
						}
					},
					{
						"scope": "geode.flalert.pink",
						"settings": {
							"foreground": "#ff00ff"
						}
					},
					{
						"scope": "geode.flalert.purple",
						"settings": {
							"foreground": "#9632ff"
						}
					}
				]
			}
		},
		"configuration": {
			"title": "Geode",
			"properties": {
				"geode.geodeCliPath": {
					"type": "string",
					"default": "",
					"description": "Path to the Geode CLI executable"
				},
				"geode.geodeSdkPath": {
					"type": "string",
					"default": "",
					"description": "Path to the Geode SDK"
				},
				"geode.textureQuality": {
					"type": "string",
					"enum": [
						"High",
						"Medium",
						"Low"
					],
					"default": "Medium",
					"description": "Quality of the graphics to show on the Sprite Browser"
				},
				"geode.defaultSpriteShowCount": {
					"type": "integer",
					"default": 350,
					"description": "How many items to show in the Sprite Browser at once by default"
				},
				"geode.showCountIncrement": {
					"type": "integer",
					"default": 250,
					"description": "How many items to add in the Sprite Browser when you click 'Load More'"
				}
			}
		},
		"jsonValidation": [
			{
				"fileMatch": "mod.json",
				"url": "./res/mod-info-validation.json"
			}
		]
	},
	"scripts": {
		"build": "NODE_ENV=production tsup --minify",
		"build:dev": "NODE_ENV=development tsup",
		"dev": "NODE_ENV=production tsup --watch",
		"vscode:prepublish": "nr build",
		"test": "vitest",
		"publish": "vsce publish --no-dependencies",
		"pack": "vsce package --no-dependencies",
		"typecheck": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "pnpm lint --fix",
		"release": "bumpp && nr publish"
	},
	"devDependencies": {
		"@antfu/ni": "^0.21.12",
		"@flowr/eslint-config": "^3.7.0",
		"@flowr/utils": "^3.7.0",
		"@img/sharp-win32-x64": "^0.33.4",

		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.14.2",
		"@types/object-hash": "^3.0.6",
		"@types/plist": "^3.0.5",
		"@types/semver": "^7.5.8",
		"@types/vscode": "^1.72.0",
		"@vscode/codicons": "^0.0.36",
		"@vscode/vsce": "^2.27.0",
		"@vscode/webview-ui-toolkit": "^1.4.0",
		"bumpp": "^9.4.1",
		"camelcase": "^8.0.0",
		"eslint": "^9.5.0",
		"eslint-plugin-format": "^0.1.2",
		"fast-glob": "^3.3.2",
		"fs-extra": "^11.2.0",
		"fuse.js": "^7.0.0",
		"object-hash": "^3.0.0",
		"plist": "^3.1.0",
		"semver": "^7.6.2",
		"sharp": "^0.33.4",
		"tsup": "^8.1.0",
		"tsx": "^4.15.5",
		"typescript": "^5.4.5",
		"vite": "^5.3.1",
		"vitest": "^1.6.0"
	}
}
