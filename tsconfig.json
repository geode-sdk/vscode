{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"lib": [
			"ESNext"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true
	},
    "include": [
        "src/**/*.ts"
    ]
}
