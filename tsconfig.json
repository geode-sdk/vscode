{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ESNext"],
		"rootDir": "src",
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"sourceMap": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts"
	]
}
