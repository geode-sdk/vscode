{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"lib": ["ESNext"],
		"sourceMap": true,
		"moduleResolution": "Node",
		"rootDir": "src",
		"strict": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
	},
    "include": [
        "src/**/*.ts"
    ]
}
